Var
valorreais, valordolars, valoralemao, valorlibras : REAL

Inicio
Escreva("Digite o valor a ser convertido: R$")
Leia(valorreais)
valordolars <- ((valorreais) /18 * 10))
Escreval ("Valor convertido $", valordolars)

Escreva("Digite o valor a ser convertido: R$")
Leia(valorreais)
valoralemao <- ((valorreais) /20 * 10)
Escreval ("Valor convertido €", valoralemao)

Escreva("Digite o valor a ser convertido: R$")
Leia(valorreais)
valorlibras <- ((valorreais) /357 * 100)
Escreval ("Valor convertido €", valorlibras)

Fimalgoritmo
